{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "paths": {
            "@/*": ["resources/js/*"]
          }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}